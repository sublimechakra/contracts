abstract contract PHX {
    function mint(address _to, uint256 _amount) public virtual;
}

contract Auction is Ownable, ReentrancyGuard {
    using TransferHelper for address;
    using SafeMath for uint256;
    uint256 constant public mag = 10 ** 18;
    //uint256 constant public delay = 1 days;
    uint256 constant public delay = 30 minutes;
    uint256 constant public daily_decay = 1000;
    uint256 constant public initial_emission = 12000 * mag;
    PHX public phx;
    address public staking;
    uint256 public start;
    mapping(uint256 => uint256) public total;
    mapping(address => mapping(uint256 => uint256)) public user;

    event OnBuy(address indexed user, uint256 round, uint256 amount);
    event OnWithdraw(address indexed user, uint256 round, uint256 amount);

    constructor() public {
        start = now;
    }
    
   function setStaking(address _staking) external onlyOwner {
        staking = _staking;
    }
    
   function setToken(address _token) external onlyOwner {
        phx = PHX(_token);
    }
    
    function emission() private view returns(uint256 amount) {
        uint256 monthsElapsed_ = (now.sub(start)).div(30.5 days);
        amount = initial_emission.sub(daily_decay.mul(monthsElapsed_));
    }

    function enter(address _referrer) payable public {
        uint256 round_ = (now.sub(start)).div(delay);
        require(round_ <= 366);
        uint256 net_ = msg.value;
        if(_referrer != address(0x0)) {
            net_ = (net_.mul(90)).div(100);
           _referrer.safeTransferETH(msg.value.sub(net_));
        }
        staking.safeTransferETH(net_);
        user[msg.sender][round_]  = user[msg.sender][round_].add(net_);
        total[round_] = total[round_].add(net_);
    }

    function withdraw(uint256 _round) public {
        uint256 currentRound_ = (now.sub(start)).div(delay);
        require(_round <= 366 && _round < currentRound_);
        uint256 maxTokens_ = emission();
        uint256 total_ = total[_round];
        uint256 rate_ = (maxTokens_.mul(mag)).div(total_);
        uint256 tokens_ = (user[msg.sender][_round].mul(rate_)).div(mag);
        delete user[msg.sender][_round];
        phx.mint(msg.sender, tokens_);
    }

}
